{
    "version": 2,
    "outputDirectory": "frontend/dist",
    "functions": {
        "api/index.py": {
            "includeFiles": "backend/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}